<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TrooponPrime" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Add attributes here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Add attributes here -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>
    <!--To fix rendering in preview -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/shadow_view</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/black</item>
        <item name="android:textColor">@color/message_color</item>
        <item name="android:itemBackground">@android:color/white</item>
    </style>
    <style name="switchStyle">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:thumb">@drawable/thumb_selector</item>
        <item name="android:padding">@dimen/_16sdp</item>
        <item name="android:textColor">@color/message_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="track">@drawable/track_selector</item>
        <!--<item name="thumbTint">@drawable/switch_thumb_color</item>
        <item name="trackTint">@drawable/switch_color</item>-->
    </style>
</resources>