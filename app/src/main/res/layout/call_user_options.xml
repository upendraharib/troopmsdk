<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/rlParentView"
    android:paddingTop="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/user_item_bg">
        <TextView
            android:padding="@dimen/_16sdp"
            android:id="@+id/tvRevokeHost"
            android:textColor="@color/message_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Revoke host"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            tools:ignore="MissingConstraints" />
        <View
            android:id="@+id/zeroView"
            app:layout_constraintTop_toBottomOf="@+id/tvRevokeHost"
            android:background="@color/quantum_grey400"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/zeroView"
            android:padding="@dimen/_16sdp"
            android:id="@+id/tvRetryUser"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/message_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Retry"
            tools:ignore="MissingConstraints" />
        <View
            android:id="@+id/firstView"
            app:layout_constraintTop_toBottomOf="@+id/tvRetryUser"
            android:background="@color/quantum_grey400"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/firstView"
            android:padding="@dimen/_16sdp"
            android:id="@+id/tvRemoveUser"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:textColor="@color/message_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove user"
            tools:ignore="MissingConstraints" />
        <View
            android:id="@+id/secondView"
            app:layout_constraintTop_toBottomOf="@+id/tvRemoveUser"
            android:background="@color/quantum_grey400"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/secondView"
            android:padding="@dimen/_16sdp"
            android:id="@+id/tvPinUser"
            android:textColor="@color/message_color"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_height="wrap_content"
            android:text="Pin user"
            tools:ignore="MissingConstraints" />
        <View
            android:id="@+id/thirdView"
            app:layout_constraintTop_toBottomOf="@+id/tvPinUser"
            android:background="@color/quantum_grey400"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/thirdView"
            android:padding="@dimen/_16sdp"
            android:id="@+id/tvRequestUnMuteAudio"
            android:textColor="@color/message_color"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:layout_height="wrap_content"
            android:text="Request to unmute audio"
            tools:ignore="MissingConstraints" />
        <View
            android:id="@+id/fourthView"
            app:layout_constraintTop_toBottomOf="@+id/tvRequestUnMuteAudio"
            android:background="@color/quantum_grey400"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/fourthView"
            android:padding="@dimen/_16sdp"
            android:id="@+id/tvRequestUnMuteVideo"
            android:textColor="@color/message_color"
            android:layout_width="match_parent"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Request to unmute video"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_marginTop="@dimen/_8sdp"
        android:padding="@dimen/_16sdp"
        android:id="@+id/tvCancle"
        android:layout_below="@+id/topView"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textSize="@dimen/_12ssp"
        android:gravity="center_horizontal"
        android:background="@drawable/user_item_bg"
        tools:ignore="MissingConstraints" />
</RelativeLayout>