<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clActionBar"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/ivBack"
                android:src="@drawable/ic_back"
                android:padding="@dimen/_14sdp"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"/>
            <TextView
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tvProfileName"
                android:textStyle="normal"
                android:layout_marginStart="@dimen/_8sdp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toEndOf="@+id/ivBack"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Name"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rlProfileView"
            app:layout_constraintTop_toBottomOf="@+id/clActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:id="@+id/rlProfile"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_72sdp">
                <ImageView
                    android:id="@+id/ivProfilePic"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/circle_white"
                    android:elevation="@dimen/_5sdp"
                    android:src="@drawable/default_user"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_72sdp"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/ivEditProfile"
                android:src="@drawable/edit"
                android:padding="@dimen/_4sdp"
                android:elevation="@dimen/_4sdp"
                android:background="@drawable/circle_white"
                android:layout_alignEnd="@+id/rlProfile"
                android:layout_alignBottom="@+id/rlProfile"
                android:layout_width="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_height="@dimen/_24sdp"/>


        </RelativeLayout>
        <TextView
            app:layout_constraintStart_toEndOf="@+id/rlProfileView"
            android:id="@+id/tvProfileAbout"
            android:textStyle="normal"
            android:layout_marginStart="@dimen/_16sdp"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@+id/clActionBar"
            android:text=""
            android:background="@drawable/item_bg"
            android:elevation="@dimen/_5sdp"
            android:drawablePadding="@dimen/_8sdp"
            android:textColor="@color/message_color"
            android:layout_width="wrap_content"
            android:maxLength="200"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ivEditAbout"
            android:padding="@dimen/_5sdp"
            android:src="@android:drawable/ic_menu_edit"
            app:layout_constraintTop_toBottomOf="@+id/clActionBar"
            android:layout_marginTop="@dimen/_16sdp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"/>
        <EditText
            android:id="@+id/ivEdittext"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintTop_toBottomOf="@+id/clActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rlProfileView"
            android:layout_width="0dp"
            android:visibility="gone"
            android:background="@android:drawable/editbox_background"
            android:layout_height="@dimen/_80sdp"/>

        <com.google.android.material.tabs.TabLayout
            app:layout_constraintTop_toBottomOf="@+id/rlProfileView"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:id="@+id/tabLayout"
            android:background="@color/conv_other_bg_color"
            app:tabInlineLabel="true"
            app:tabTextColor="@color/group_member_color"
            app:tabIndicatorColor="@color/teal_700"
            app:tabSelectedTextColor="@color/entity_name_color" />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_marginTop="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:paddingStart="@dimen/_24sdp"
            android:paddingEnd="@dimen/_24sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:id="@+id/fabChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/mine_conv_bg"
            android:text="Chat"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>