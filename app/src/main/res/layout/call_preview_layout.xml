<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clParentView"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conv_other_bg_color">

    <TextView
        android:layout_marginBottom="@dimen/_48sdp"
        app:layout_constraintBottom_toTopOf="@+id/ivProfilePic"
        android:layout_marginStart="@dimen/_48sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:id="@+id/tvCallType"
        android:text="Audio call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginBottom="@dimen/_48sdp"
        android:id="@+id/ivProfilePic"
        app:layout_constraintBottom_toTopOf="@+id/tvCallingName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/default_user"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_64sdp"/>
<TextView
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="@dimen/_16ssp"
    android:text="Calling...."
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:textColor="@color/colorAccent"
    android:id="@+id/tvCallingName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ivAccept"
        android:layout_marginTop="@dimen/_48sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:paddingStart="@dimen/_24sdp"
        android:paddingEnd="@dimen/_24sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvCallingName"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/accept_button_bg"
        android:textColor="@color/white"
        android:text="Accept"
        android:layout_marginStart="@dimen/_16sdp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/ivReject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ivReject"
        android:layout_marginTop="@dimen/_48sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:paddingStart="@dimen/_24sdp"
        android:paddingEnd="@dimen/_24sdp"
        android:paddingTop="@dimen/_8sdp"
        android:gravity="center"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvCallingName"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/reject_button_bg"
        android:textColor="@color/white"
        android:text="Reject"
        app:layout_constraintEnd_toStartOf="@+id/ivAccept"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivEndCall"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvCallingName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_24sdp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:src="@drawable/end_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>