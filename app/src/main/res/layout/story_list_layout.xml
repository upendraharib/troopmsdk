<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clActionBar"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ivBack"
            android:src="@drawable/ic_back"
            android:padding="@dimen/_14sdp"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"/>
        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tvCreateGroup"
            android:textStyle="normal"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Stories"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:background="@drawable/item_bg"
        android:elevation="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/clActionBar"
        android:orientation="horizontal"
        android:id="@+id/llMyStories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivMyStories"
        android:layout_margin="@dimen/_8sdp"
        android:textStyle="normal"
        android:src="@drawable/default_user"
        app:layout_constraintStart_toStartOf="parent"
        android:text="My Stories"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"/>
    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tvMyStories"
        android:textStyle="normal"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_8sdp"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/ivBack"
        app:layout_constraintTop_toTopOf="parent"
        android:text="My Stoies"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/storyUserList"
        android:padding="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/llMyStories"
        android:src="@android:drawable/btn_star_big_on"
        tools:listitem="@layout/story_user_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvSend"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="normal"
        android:background="@drawable/button_bg"
        android:layout_marginStart="@dimen/_8sdp"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Create Story"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_24sdp"
        android:paddingEnd="@dimen/_24sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>