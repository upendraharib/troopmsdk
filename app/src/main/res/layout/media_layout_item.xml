<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data class="MediaItemAdapterBinding">
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/item_bg"
    android:elevation="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ivMediaImage"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/default_user"
        android:layout_width="match_parent"
        android:minHeight="@dimen/_80sdp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/ivMediaImage"
        android:id="@+id/ivDownload"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@android:drawable/stat_sys_download"
        android:padding="@dimen/_8sdp"
        android:visibility="gone"
        android:background="@drawable/circl_bg"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        />
    <TextView
        android:paddingStart="@dimen/_3sdp"
        android:paddingEnd="@dimen/_3sdp"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMediaImage"
        android:id="@+id/tvSenderName"
        android:textStyle="bold"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/colorAccent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingStart="@dimen/_3sdp"
        android:paddingEnd="@dimen/_3sdp"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSenderName"
        android:id="@+id/tvFileName"
        android:textStyle="normal"
        android:textSize="@dimen/_9ssp"
        android:textColor="@color/message_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingStart="@dimen/_3sdp"
        android:paddingEnd="@dimen/_3sdp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFileName"
        android:id="@+id/tvCreatedAt"
        android:textSize="@dimen/_8ssp"
        android:textColor="@color/message_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>